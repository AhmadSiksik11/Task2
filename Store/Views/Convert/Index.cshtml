@{
    ViewData["Title"] = "Upload Excel File";
}

<div class="container mt-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <form asp-controller="Convert" asp-action="Index" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
        <div class="form-group mb-3">
            <label for="file" class="form-label">Select Excel file to upload:</label>
            <input type="file" name="file" id="file" class="form-control" required />
            <div class="invalid-feedback">
                Please select a valid Excel file.
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="tableName" class="form-label">Enter Table Name:</label>
            <input type="text" name="tableName" id="tableName" class="form-control" required />
            <div class="invalid-feedback">
                Please enter a table name.
            </div>
        </div>
        <button type="submit" class="btn btn-primary">SQL(INSERT)</button>
    </form>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info mt-4">
            @ViewBag.Message
        </div>

        @if (ViewBag.SqlStatements != null)
        {
            <div class="card mt-4">
                <div class="card-header">
                    Generated SQL Statements
                </div>
                <div class="card-body">
                    <pre>@ViewBag.SqlStatements</pre>
                </div>
            </div>
        }
    }
</div>

<script>
    // Bootstrap validation for forms
    (function () {
        'use strict';
        var forms = document.querySelectorAll('.needs-validation');

        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }

                    form.classList.add('was-validated');
                }, false);
            });
    })();
</script>
